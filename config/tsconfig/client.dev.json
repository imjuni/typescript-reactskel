{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "../../node_modules/@types",
      "../../src/client/@types"
    ]
  },
  "filesGlob": [
    "../../**/*.ts"
  ],
  "include": [
    "../../**/*"
  ],
  "exclude": [
    "../../node_modules/**",
    "../../src/server/**",
    "../../config/**",
    "../../dist/**"
  ]
}
